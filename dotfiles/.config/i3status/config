# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
	#color_good = "#a3be8c"
	color_good = "#d8dee9"
	color_bad = "#bf616a"
	color_degraded = "#d08770"
        interval = 5
	separator = ""
}

order += "wireless _first_"
order += "path_exists VPN"
order += "volume master"
order += "battery all"
order += "load"
#order += "cpu_usage"
order += "memory"
order += "tztime local"

battery all {
	integer_battery_capacity = true
	format = "%status %percentage"
	status_chr = ""
	status_bat = ""
	status_unk = ""
	status_full = ""
	path = "/sys/class/power_supply/BAT%d/uevent"
	low_threshold = 10
	threshold_type = "percentage"
}

path_exists VPN {
	path = "/proc/sys/net/ipv4/conf/tun0"
	format = "[VPN]"
	format_down = ""
}

load {
	format = " %5min"
}

wireless _first_ {
	format_up = " %quality"
        format_down = " DOWN"
	format_quality = "%02d%s"
}

volume master {
        format = " %volume"
        format_muted = " %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_usage {
        format = " %usage"
}

memory {
	format = " %percentage_used"
}

tztime local {
        format = " %d/%m %H:%M"
}
