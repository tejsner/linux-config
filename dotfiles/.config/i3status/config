# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
	color_good = "#a3be8c"
	color_bad = "#bf616a"
	color_degraded = "#d08770"
        interval = 5
	separator = ""
}

order += "wireless _first_"
order += "volume master"
order += "cpu_usage"
order += "memory"
order += "tztime local"

wireless _first_ {
	format_up = " %quality"
        format_down = " DOWN"
	format_quality = "%02d%s"
}

volume master {
        format = " %volume"
        format_muted = " %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

cpu_usage {
        format = " %usage"
}

memory {
	format = " %percentage_used"
}

tztime local {
        format = " %d/%m %H:%M"
}
